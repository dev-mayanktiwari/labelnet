{
  "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",                 
    "moduleResolution": "nodenext",     
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",                   
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}